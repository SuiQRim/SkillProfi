<UserControl x:Class="SkillProfiWPF.Views.ConsultationsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Models="clr-namespace:SkillProfi;assembly=SkillProfi"
             xmlns:ViewModels="clr-namespace:SkillProfiWPF.ViewModels"
             xmlns:Converters="clr-namespace:SkillProfiWPF.ViewModels.Converters"
             xmlns:local="clr-namespace:SkillProfiWPF.Views"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             mc:Ignorable="d" 
             FontFamily="Arial"
             d:DesignHeight="600" d:DesignWidth="1000">


    <UserControl.DataContext>
        <ViewModels:ConsultationsViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel 
            Margin="0 10"
            Grid.Row="0"
            HorizontalAlignment="Left"
            Orientation="Horizontal">

            <TextBlock 
                Padding="10"
                FontSize="20px"
                Foreground="Black"
                TextAlignment="Center"
                Text="Requests for all time">

            </TextBlock>

            <Border 
                CornerRadius="8"
                Background="#4299d9">

                <TextBlock
                    Padding="20 10"
                    FontSize="20px"
                    Foreground="White"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Text="{Binding Consultations.Count}">

                </TextBlock>

            </Border>

        </StackPanel>
        <StackPanel 
            
            Grid.Row="1"
            Orientation="Horizontal">

            <Button
                Style="{DynamicResource DatePanel}"
                Content="Today"
                Command="{Binding SetDateDiapasone}"
                CommandParameter="0"
                Margin="5 10 0 10">

            </Button>

            <Button
                Style="{DynamicResource DatePanel}"
                Content="Yesterday"
                Command="{Binding SetDateDiapasone}"
                CommandParameter="1">

            </Button>

            <Button
                Style="{DynamicResource DatePanel}"
                Content="Last Week"
                Command="{Binding SetDateDiapasone}"
                CommandParameter="7">

            </Button>

            <Button
                Style="{DynamicResource DatePanel}"
                Content="Last Month"
                Command="{Binding SetDateDiapasone}"
                CommandParameter="30">

            </Button>

            <StackPanel 
                Margin="10"
                Orientation="Horizontal">


                <Border 
                    CornerRadius="8"
                    Background="#4299d9"
                    VerticalAlignment="Center">

                    <TextBlock
                        Padding="20 10"
                        FontSize="18px"
                        Foreground="White"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Text="From">

                    </TextBlock>

                </Border>

                <DatePicker
                    Text="Период с"
                    Margin="10"
                    VerticalAlignment="Center"
                    SelectedDate="{Binding FirstDate}">

                </DatePicker>


                <Border 
                    VerticalAlignment="Center"
                    CornerRadius="8"
                    Background="#4299d9">

                    <TextBlock
                        Padding="20 10"
                        FontSize="18"
                        Foreground="White"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Text="To">

                    </TextBlock>

                </Border>

                <DatePicker
                    Margin="10"
                    VerticalAlignment="Center"
                    SelectedDate="{Binding LastDate}">

                </DatePicker>

            </StackPanel>

        </StackPanel>


        <StackPanel 
            Margin="0 10"
            Grid.Row="2"
            HorizontalAlignment="Left"
            Orientation="Horizontal">

            <TextBlock 
                Padding="10"
                FontSize="20px"
                Foreground="Black"
                TextAlignment="Center"
                Text="Requests for the specified period">

            </TextBlock>

            <Border 
                CornerRadius="8"
                Background="#4299d9">

                <TextBlock
                    Padding="20 10"
                    FontSize="20px"
                    Foreground="White"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Text="{Binding FilteredConsultations.Count}">

                </TextBlock>

            </Border>

        </StackPanel>

        <StackPanel
            d:Visibility="Visible"
            Orientation="Horizontal"
            Grid.Row="3">
            <StackPanel.Resources>
                <Style TargetType="StackPanel">
                    <Setter Property="Visibility">
                        <Setter.Value>

                            <Binding Path="SelectedConsultation"
                                     UpdateSourceTrigger="PropertyChanged"
                                     Converter="{StaticResource ObjectValueExcistToVisibiliyConverter}">
                            </Binding>
                        </Setter.Value>
                    </Setter>
                </Style>
            </StackPanel.Resources>
            
         
            <Button
                Foreground="White"
                FontSize="18"
                Content="Изменить"
                Padding="20 10"
                Background="#4299d9"
                BorderThickness="0"
                Command="{Binding EditConsultationStatus}"
                IsEnabled="{Binding IsOpenEditStatusMenuElement, Converter={StaticResource InverseBooleanConverter}}"
                Margin="5 10">
                
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </Button.Resources>

            </Button>   
            
            <StackPanel
                d:Visibility="Visible"
                Visibility="{Binding IsOpenEditStatusMenuElement, Converter={StaticResource BoolToVis}, UpdateSourceTrigger=PropertyChanged}"
                Orientation="Horizontal">

             

                <ComboBox 
                    Width="120"
                    Margin="5 10"
                    FontSize="18"
                    ItemsSource="{Binding ConsultationStatuses}"
                    SelectedItem="{Binding SelectedConsultation.Status}">

                </ComboBox>  
                
                <Button
                    Foreground="White"
                    Content="✔"
                    Padding="10"
                    Margin="5 10"
                    Background="#4299d9"
                    BorderThickness="0"
                    Command="{Binding SaveConsultationStatus}">

                    <Button.Resources>

                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>

                    </Button.Resources>
               
                </Button>

            </StackPanel>

         
        </StackPanel>
        
        
        
        <ListBox
            Margin="0 10"
            x:Name="ListOfConsultations"
            Grid.Row="4"
            HorizontalContentAlignment="Stretch"
            ItemsSource="{Binding FilteredConsultations, UpdateSourceTrigger=PropertyChanged}"
            SelectedItem="{Binding SelectedConsultation}"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled">

            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Margin" Value="5"/>
                    <Setter Property="Padding" Value="5"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border
                        BorderThickness="2"
                        BorderBrush="#4299d9"
                        CornerRadius="8">

                        <StackPanel Margin="10" 
                                    >
                            <TextBlock 
                                FontSize="22" 
                                Text="{Binding Name}"/>

                            <TextBlock 
                                Margin="0 10"
                                FontSize="18" 
                                TextWrapping="Wrap"
                                Text="{Binding Description}"/>

                            <Grid 
                                Height="auto">

                                <Border
                                    HorizontalAlignment="Left"    
                                    CornerRadius="4"
                                    Background="#4299d9">
                                    <TextBlock 
                                        Foreground="White"
                                        Padding="10"
                                        TextAlignment="Center"
                                        Text="{Binding Status}" 
                                        Width="160"
                                        FontSize="18"/>

                                </Border>


                                <TextBlock   
                                    Text="{Binding Created}"
                                    VerticalAlignment="Bottom"
                                    HorizontalAlignment="Right"/>

                            </Grid>


                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
