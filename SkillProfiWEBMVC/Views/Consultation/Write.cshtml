@model SkillProfi.Consult.ConsultationTransfer

@{
    ViewData["Title"] = "Consultation";
}

<div id="consultation" style="margin: 10px;">

	<div class="title-mini">
		<p>Ask a question or submit application</p>
	</div>

	<div>

		@using (Html.BeginForm("Write", "Consultation", FormMethod.Post)){
			@Html.AntiForgeryToken()

			<div class="form">
				<div>
					@Html.EditorFor(model => model.EMail, new {
						htmlAttributes = new {
							@placeholder= "E-mail" } 
						})

					@Html.ValidationMessageFor(model => model.EMail, "", new { @class = "error-text" })
				</div>

				<div>
					@Html.EditorFor(model => model.Name, new {
						htmlAttributes = new {
							@placeholder= "Name" } 
						})

					@Html.ValidationMessageFor(model => model.Name, "", new { @class = "error-text" })
				
				</div>

				<div>
					@Html.EditorFor(model => model.Description, new {
						htmlAttributes = new {
							@class = "textarea-input",
							@placeholder= "Description" } 
					})

					@Html.ValidationMessageFor(model => model.Description, "", new { @class = "error-text" })

				</div>


				<input type="submit" style="float:right;" value="Send" class="button" />

			</div>
		}
	</div>
</div>
