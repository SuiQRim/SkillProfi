@model GeneralModel<Blog>

@{
    ViewData["Title"] = "Blogs";
}

<div id="blog" style="min-height: 520px;">

    <div id="@Model.Object.Id">

        <div class="title">@Model.Object.Title</div>

        <div>
            <div class="image-block-content">
                <img src='@(Model.ImageLink)' onerror="this.src='/Assets/ImageError.png'">
            </div>
            <div class="description">
                <a>@Model.Object.Description</a>
            </div>
        </div>
    </div>

</div>

<button 
    class="button" style="float: right;" 
    onclick="@("window.location.href='" + @Url.Action("Blogs", "Blogs") + "'");">

    Назад

</button>
